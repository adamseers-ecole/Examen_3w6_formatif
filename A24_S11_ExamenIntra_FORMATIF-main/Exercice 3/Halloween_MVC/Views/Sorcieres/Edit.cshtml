@model Halloween.Models.Sorciere

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier</h1>

<h4>Sorciere</h4>
<hr />
        <form class="bg-light" asp-action=" Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origine" class="control-label"></label>
                <input asp-for="Origine" class="form-control" />
                <span asp-validation-for="Origine" class="text-danger"></span>
            </div>
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-info form-control" asp-route-id="@Model.Id">Modifier</button>
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-warning form-control">Retour à la liste</a>
        </div>
    </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
