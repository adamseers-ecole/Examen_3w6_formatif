@model IEnumerable<Halloween.Models.Sorciere>

@{
    ViewData["Title"] = "Liste des sorcières";
}

<h1>Liste des sorcières</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Ajouter</a>
</p>
<table class="table table-secondary table-bordered border-primary">
    <thead class="bg-primary text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origine)
            </td>
            <td>
                    <a class="btn btn-info mx-2" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                    <a class="btn btn-danger mx-2" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                    <a class="btn btn-primary mx-2" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
