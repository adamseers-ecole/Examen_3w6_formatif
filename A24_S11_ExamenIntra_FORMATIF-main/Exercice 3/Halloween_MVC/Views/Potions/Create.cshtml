@model Halloween.ViewModels.PotionVM

@{
    ViewData["Title"] = "Create";
}

<h1>Ajouter</h1>

<h4>Potion</h4>
<hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Potion.Nom" class="control-label"></label>
        <input asp-for="Potion.Nom" class="form-control" />
        <span asp-validation-for="Potion.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
        <label asp-for="Potion.DateCreation" class="control-label"></label>
        <input asp-for="Potion.DateCreation" class="form-control" />
        <span asp-validation-for="Potion.DateCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
          @*       MODIFIEZ LE SELECT LIST CI DESSOUS *@
        <label asp-for="Potion.Sorciere_Id" class="control-label"></label>
        <select asp-for="Potion.Sorciere_Id" class="form-control" asp-items="ViewBag.Sorciere_Id"></select>
            </div>
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success form-control">Ajouter</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-warning form-control">Retour à la liste</a>
                </div>
            </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
